# =============================================================================
# AI Healthcare Chatbot API - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# =============================================================================
# SECURITY - REQUIRED
# =============================================================================
# Secret key for JWT token signing (MUST be changed in production!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_IN_PRODUCTION

# =============================================================================
# DATABASE - REQUIRED FOR PRODUCTION
# =============================================================================
# For Production (MySQL):
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/healthcaresense

# For Development (SQLite) - NOT for production:
# DATABASE_URL=sqlite:///./healthcare.db

# Database connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# OPENAI API - OPTIONAL (enables advanced features)
# =============================================================================
# Required for advanced intent classification and RAG response generation
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI model configuration
OPENAI_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# CHROMADB / RAG CONFIGURATION
# =============================================================================
# Directory for ChromaDB vector storage
CHROMA_DIR=.chroma

# Collection name for document embeddings
CHROMA_COLLECTION=healthcare_specs

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_VERSION=v1

# JWT Token Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:4200,https://yourdomain.com

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=json

# Log file path (leave empty for stdout only)
LOG_FILE_PATH=logs/app.log

# =============================================================================
# MONITORING & OBSERVABILITY (Optional)
# =============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application Performance Monitoring
# APM_ENABLED=false
# APM_SERVICE_NAME=healthcare-chatbot-api

# =============================================================================
# COMPLIANCE & HEALTHCARE SETTINGS
# =============================================================================
# Enable HIPAA compliance mode (enhanced logging, audit trails)
HIPAA_COMPLIANCE_MODE=true

# Data retention period (days)
CHAT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Maximum workers for async operations
MAX_WORKERS=4

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# RAG settings
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_RESULTS=5
